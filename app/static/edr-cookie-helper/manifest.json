{
  "manifest_version": 3,
  "name": "EDR Cookie Helper",
  "version": "1.1",
  "description": "Captures Walmart Retail Link cookies for EDR paperwork generation",
  "permissions": ["cookies"],
  "host_permissions": [
    "https://*.wal-mart.com/*",
    "https://*.walmart.com/*",
    "https://pceventmanager.site/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png"
  }
}
